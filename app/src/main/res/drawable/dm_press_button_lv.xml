<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 点击背景 -->
    <item android:state_pressed="true"><shape>
            <solid android:color="#26990f" />

            <stroke android:width="1px" android:color="#20800d" />
        </shape></item>
    <!-- 默认背景 -->
    <item><shape>
            <solid android:color="#4dbe37" />

            <stroke android:width="1px" android:color="#49b234" />
        </shape></item>

</selector>