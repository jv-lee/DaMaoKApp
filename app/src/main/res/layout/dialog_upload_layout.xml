<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/upload_to_cloud"
        android:textColor="@color/diy_text_gray"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/share_to_cloud"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_yellow_corner_360_selector"
            android:gravity="center"
            android:text="@string/button_upload"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- 
        <Button
            android:id="@+id/share_to_competition"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_red_corner_360_selector"
            android:gravity="center"
            android:text="@string/button_competition"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
             -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="22dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/dialog_cut_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/share_to"
            android:textColor="@color/diy_text_gray"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/dialog_cut_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/share_to_wechat_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/dialog_wechat_friend_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/wechat"
            android:textColor="@color/diy_text_gray"
            android:textSize="@dimen/more_button_font_size" />

        <Button
            android:id="@+id/share_to_wechat_moment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/dialog_wechat_moment_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/wechat_moment"
            android:textColor="@color/diy_text_gray"
            android:textSize="@dimen/more_button_font_size" />

        <Button
            android:id="@+id/share_to_qq_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/dialog_qq_friend_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/qq"
            android:textColor="@color/diy_text_gray"
            android:textSize="@dimen/more_button_font_size" />

        <Button
            android:id="@+id/share_to_weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/dialog_weibo_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/weibo"
            android:textColor="@color/diy_text_gray"
            android:textSize="@dimen/more_button_font_size" />
    </LinearLayout>

</LinearLayout>