<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/dm_mnfv_001"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <LinearLayout
            android:id="@+id/dm_mnfv_002"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/dm_mnfv_lin_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/dm_mnfv_img_search"
                    android:layout_width="27dp"
                    android:layout_height="27dp" />

                <TextView
                    android:id="@+id/dm_mnfv_tv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="搜索" />
            </LinearLayout>

            <TextView
                android:id="@+id/dm_mnfv_003"
                android:layout_width="1px"
                android:layout_height="25dp"
                android:background="#cccccc" />

            <LinearLayout
                android:id="@+id/dm_mnfv_lin_tianqi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/dm_mnfv_img_tianqi"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="1dp" />

                <TextView
                    android:id="@+id/dm_mnfv_tv_tianqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天气" />
            </LinearLayout>

            <TextView
                android:id="@+id/dm_mnfv_004"
                android:layout_width="1px"
                android:layout_height="25dp"
                android:background="#cccccc" />

            <LinearLayout
                android:id="@+id/dm_mnfv_lin_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/dm_mnfv_img_ll"
                    android:layout_width="27dp"
                    android:layout_height="27dp" />

                <TextView
                    android:id="@+id/dm_mnfv_tv_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="流量" />
            </LinearLayout>

            <TextView
                android:id="@+id/dm_mnfv_005"
                android:layout_width="1px"
                android:layout_height="25dp"
                android:background="#cccccc" />

            <LinearLayout
                android:id="@+id/dm_mnfv_lin_clean"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/dm_mnfv_img_clean"
                    android:layout_width="27dp"
                    android:layout_height="27dp" />

                <TextView
                    android:id="@+id/dm_mnfv_tv_clean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="加速" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dm_mnfv_lin_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="8dp" >

            <ImageView
                android:id="@+id/dm_mnfv_006"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dm_icon_mnfv_close" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>