<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0091ea"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/dm_endview_re_one"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0091ea" >

        <ImageView
            android:id="@+id/dm_endview_img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:src="@drawable/dm_icon_back" />

        <TextView
            android:id="@+id/dm_endview_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:text="一键Root大师"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/dm_endview_sv_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2" >

        <LinearLayout
            android:id="@+id/dm_endview_lin_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/dm_endview_lin_top"
                android:layout_width="match_parent"
                android:layout_height="168.6dp"
                android:background="#0091ea"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/dm_endview_img_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/dm_icon_endview_ok" />

                <TextView
                    android:id="@+id/dm_endview_tv_con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Root成功"
                    android:textColor="#ffffff"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/dm_endview_img_xjt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/dm_icon_endview_more" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dm_endview_lin_appone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="9.3dp"
                android:background="@drawable/dm_press_list_bai_havebk"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/dm_endview_tv_appone_title"
                    android:layout_width="wrap_content"
                    android:layout_height="45.3dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:text="手机加速"
                    android:textColor="#4a4a4a"
                    android:textSize="15.3sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/dm_endview_img_appone_icon"
                        android:layout_width="50.6dp"
                        android:layout_height="50.6dp"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/dm_icon_endview_appone" />

                    <TextView
                        android:id="@+id/dm_endview_tv_appone_con"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_weight="1"
                        android:text="一键清理应用垃圾，加速手机"
                        android:textColor="#767676"
                        android:textSize="15.3sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/dm_endview_tv_appone_go"
                    android:layout_width="fill_parent"
                    android:layout_height="39dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/dm_press_button_applist"
                    android:gravity="center"
                    android:text="立即加速"
                    android:textColor="#ffffff"
                    android:textSize="15.3sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dm_endview_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="9.3dp"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/dm_endview_load_more_layout"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/dm_bg_load_more"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/dm_endview_load_more_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="点击查看 更多精彩内容"
                    android:textColor="#4ac2ff"
                    android:textSize="11.33sp"
                    android:visibility="invisible" />

                <ProgressBar
                    android:id="@+id/dm_endview_load_more_loading"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>