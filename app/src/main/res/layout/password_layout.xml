<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/loveslock_create_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="#b3000000"
        android:shadowRadius="1.0"
        android:text="@string/lovelocker_password_setting_string"
        android:textColor="@android:color/white"
        android:textSize="16.0sp"
        android:visibility="invisible" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <com.lockstudio.sticklocker.view.PasswordIndView
            android:id="@+id/passwordIndView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/cleanpass"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/passwordIndView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="X"
            android:textColor="@android:color/white"
            android:textSize="16.0sp" 
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"/>
    </RelativeLayout>

</LinearLayout>