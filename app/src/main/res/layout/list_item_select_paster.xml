<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="6dp" >

    <ImageView
        android:id="@+id/item_iv_paster"
        android:layout_width="58dp"
        android:layout_height="58dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_iv_paster"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_tv_paster_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textColor="@color/more_txt_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_tv_paster_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="介绍"
            android:textColor="@color/more_txt_color_bottom"
            android:textSize="13sp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/download_paster_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/btn_empty_blue_bg_select"
        android:progressDrawable="@drawable/progressbar_style_stick" />

    <Button
        android:id="@+id/item_btn_paster_down"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:focusable="false"
        android:background="@drawable/btn_empty_blue_bg_select"
        android:text="下载"
        android:textColor="@color/bottom_all_btn_bg_color"
        android:textSize="14sp" />

</RelativeLayout>