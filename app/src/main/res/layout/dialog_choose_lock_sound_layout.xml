<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:text="@string/setting_lock_sound"
        android:textColor="@color/primary_textcolor"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:scrollbars="vertical" >

        <RadioGroup
            android:id="@+id/choose_sound_radiogroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingTop="10dp" >

            <RadioButton
                android:id="@+id/radiobutton_null"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="无"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_system"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="跟随系统"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_lock1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="锁屏声音一"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_lock2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="锁屏声音二"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_lock3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="锁屏声音三"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_lock4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="锁屏声音四"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_lock5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="锁屏声音五"
                android:textColor="@color/primary_textcolor" />
            
             <RadioButton
                android:id="@+id/radiobutton_lock6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="锁屏声音六"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_lock7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="锁屏声音七"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_iphone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="iPhone锁屏声"
                android:textColor="@color/primary_textcolor" />
            
             <RadioButton
                android:id="@+id/radiobutton_lock_windows"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="windows锁屏声音"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_lock_fangpi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="放屁锁屏声音"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_lock_riyu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="日语锁屏声音"
                android:textColor="@color/primary_textcolor" />
        </RadioGroup>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/dialog_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/cancle"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialog_button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/comfrim"
            android:textColor="@color/red"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>