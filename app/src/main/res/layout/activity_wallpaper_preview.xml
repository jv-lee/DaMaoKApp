<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/wallpaper_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/paper_preview_buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/trans_90_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="invisible" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/activity_paper_preview_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/button_phone_selector"
                android:gravity="center"
                android:textColor="@color/diy_text_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/activity_paper_preview_play"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/button_round_red_selector"
            android:contentDescription="@string/app_name"
            android:scaleType="center" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/activity_paper_preview_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/button_share_selector"
                android:gravity="center"
                android:textColor="@color/diy_text_gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/paper_preview_buttom"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/left_button_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/paper_preview_diy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_whitered_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/open_diy"
                android:textColor="@drawable/text_color_selector"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/paper_display_top" />
        </RelativeLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/right_button_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/paper_preview_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_whitered_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/setup_wallpaper"
                android:textColor="@drawable/text_color_selector"
                android:textSize="17sp" />
        </RelativeLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>