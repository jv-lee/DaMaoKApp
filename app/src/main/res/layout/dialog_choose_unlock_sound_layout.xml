<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:text="@string/setting_unlock_sound"
        android:textColor="@color/primary_textcolor"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:scrollbars="vertical" >

        <RadioGroup
            android:id="@+id/choose_sound_radiogroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingTop="10dp" >

            <RadioButton
                android:id="@+id/radiobutton_null"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="无"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_system"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="跟随系统"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_shuidi1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="水滴声一"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_shuidi2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="水滴声二"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_shuidi3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="水滴声三"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_shuidi4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="水滴声四"
                android:textColor="@color/primary_textcolor" />
            <RadioButton
                android:id="@+id/radiobutton_shuidi5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="水滴声五"
                android:textColor="@color/primary_textcolor" />
            
            <RadioButton
                android:id="@+id/radiobutton_unlock_sound1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="解锁声音一"
                android:textColor="@color/primary_textcolor" />
            <RadioButton
                android:id="@+id/radiobutton_unlock_sound2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="解锁声音二"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_boli"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="打碎玻璃"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_baojian"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="宝剑出鞘"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_dingdong"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="叮咚"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_kaimen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="开门声"
                android:textColor="@color/primary_textcolor" />
            
            <RadioButton
                android:id="@+id/radiobutton_unlock_windows"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="windows解锁声音"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_unlock_duola"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="哆啦A梦解锁声音"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_unlock_fangpi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="放屁解锁声音"
                android:textColor="@color/primary_textcolor" />

            <RadioButton
                android:id="@+id/radiobutton_unlock_riyu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="日语解锁声音"
                android:textColor="@color/primary_textcolor" />
        </RadioGroup>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/dialog_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/cancle"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialog_button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/comfrim"
            android:textColor="@color/red"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>