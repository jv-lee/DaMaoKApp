<resources>

    <!-- Base application theme. -->
    <style name="WelcomeTheme" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowBackground">@drawable/ic_welcome_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Required滑动透明背景-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <style name="LockTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Required滑动透明背景-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/lockAnimation</item>
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_center</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_center</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <!-- animation 样式 -->
    <style name="lockAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/alpha_me_in</item>
        <item name="android:activityOpenExitAnimation">@anim/alpha_me_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/alpha_me_out</item>
        <item name="android:activityCloseExitAnimation">@anim/alpha_me_out</item>
    </style>

    <!-- Main页面导航按钮样式 -->
    <style name="main_nav_button">
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/selector_main_text</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
